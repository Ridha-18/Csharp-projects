@model List<Task20.Models.Employee>

<h3>Employee List</h3>
<a asp-action="Create">Add Employee</a>
<table border="1" cellpadding="5" width="75%">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>DOB</th>
        <th>DOJ</th>
        <th>Salary</th>
        <th>Department</th>
        
    </tr>
    @foreach (var employee in Model)
    {
        <tr>
            <td>@employee.Id</td>
            <td>@employee.Name</td>
            <td>@employee.DOB</td>
            <td>@employee.DOJ</td>
            <td>@employee.Salary</td>
            <td>@employee.Department</td>
          
            <td>
                <a asp-action="Edit" asp-route-id="@employee.Id">Edit</a> |
                <a asp-action="Delete" asp-route-id="@employee.Id">Delete</a> |
                <a asp-action="Details" asp-route-id="@employee.Id">Details</a>
            </td>
        </tr>
    }
</table>
