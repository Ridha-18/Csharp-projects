@model List<CrudApp.Models.Employee>

    <h2>Employee List</h2>
    <a asp-action="Create">Add Employee</a>
    <table border="1" cellpadding="5">
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Position</th>
            <th>Actions</th>
        </tr>
        @foreach (var emp in Model)
    {
        <tr>
            <td>@emp.Id</td>
            <td>@emp.Name</td>
            <td>@emp.Position</td>
            <td>
                <a asp-action="Edit" asp-route-id="@emp.Id">Edit</a> |
                <a asp-action="Delete" asp-route-id="@emp.Id">Delete</a>
            </td>
        </tr>
    }
    </table>
